{
  "name": "NotePad",
  "version": "1.2",
  "description": "Build an Extension!",
  "permissions": ["storage", "activeTab"],
  "content_security_policy": "script-src 'self'; object-src 'self'",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "img/notepad.png"
  },
  "manifest_version": 2
}